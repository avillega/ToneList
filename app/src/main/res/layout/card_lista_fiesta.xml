<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="210dp"

    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardBackgroundColor="@color/colorPrimary"
        card_view:cardElevation="0dp"
android:layout_margin="20dp"
        >

        <RelativeLayout
            android:id="@+id/rl_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/transparente"
            >

            <ImageView
                android:id="@+id/im_cover"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/im_cover"
                android:gravity="center_vertical"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:fontFamily="@string/font_family_black"
                    android:text="@string/evento"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/small"
                    />

                <TextView
                    android:id="@+id/tv_evento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:fontFamily="@string/font_family_regular"
                    android:text="@string/evento"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/small"
                    android:paddingRight="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_family_black"
                    android:text="@string/direccion"
                    android:lines="1"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/small"
                    android:paddingRight="20dp"
                    />

                <TextView
                    android:id="@+id/tv_direccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_family_regular"
                    android:text="@string/direccion"
                    android:lines="1"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/small"
                    android:paddingRight="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_family_black"
                    android:text="@string/fecha"
                    android:lines="1"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/small"
                    android:paddingRight="20dp"
                    />

                <TextView
                    android:id="@+id/tv_fecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_family_regular"
                    android:text="@string/fecha"
                    android:lines="1"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/small"
                    android:paddingRight="20dp"
                    />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_family_black"
                    android:text="@string/codigo"
                    android:lines="1"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/small"
                    android:paddingRight="20dp"
                    />

                <TextView
                    android:id="@+id/tv_codigo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_family_regular"
                    android:text="@string/codigo"
                    android:lines="1"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/small"
                    android:paddingRight="20dp"
                    />
            </LinearLayout>



        </RelativeLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>